{
  "compilerOptions": {
    "incremental": true,
    // Targeting
    "target": "esnext",
    "moduleResolution": "bundler",
    // JSDoc type checking
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    // Misc.
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
